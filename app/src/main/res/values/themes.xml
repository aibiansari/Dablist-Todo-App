<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Dablist" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.Dablist" parent="Base.Theme.Dablist" />

    <style name="DialogStyle" parent="Theme.Design.BottomSheetDialog">

        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/shadow</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorButtonNormal">@color/mainColor</item>
    </style>

</resources>